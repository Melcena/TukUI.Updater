<Window x:Class="options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings for TukUI Updater" Height="217" Width="300">
    <Grid>
        <TextBox Height="23" Margin="22,28,26,0" Name="txtWoW" VerticalAlignment="Top" Grid.ColumnSpan="2" />
        <TextBox Margin="22,86,26,70" Name="txtDL" Grid.ColumnSpan="2" />
        <CheckBox Height="16" Margin="22,0,121,43" Name="chk" VerticalAlignment="Bottom" Grid.ColumnSpan="2">Overwrite Config.lua</CheckBox>
        <Button Height="30" Margin="22,0,0,8" Name="btn_save" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="77">Save</Button>
        <Button Height="30" Margin="0,0,26,8" Name="btn_cancel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="77">Cancel</Button>
        <Label Height="28" Margin="22,0,102,0" Name="Label1" VerticalAlignment="Top" Grid.ColumnSpan="2">Path to World of Warcraft</Label>
        <Label Margin="22,58,26,0" Name="Label2" Height="28" VerticalAlignment="Top" Grid.ColumnSpan="2">Path to TukUI (Used for edits, Advanced)</Label>
    </Grid>
</Window>
